@model Rocosa.Models.Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">New Application Type</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Application Type Name</label>
                    <input asp-for="Name" class="form-control"/>
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Create New</button>
                <a asp-controller="ApplicationType" asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
</form>


