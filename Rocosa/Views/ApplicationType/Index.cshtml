@model IEnumerable<Rocosa.Models.ApplicationType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">Create New ApplicationType</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Application Type Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <th width="50%">@item.Name</th>
                                <th></th>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <p>No application type records yet</p>
    }
</div>

