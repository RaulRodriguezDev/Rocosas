@model IEnumerable<Rocosa.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> New Product
             </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model)
                {
                                    <tr>
                                        <th>@item.Name</th>
                                        <th>@item.ProductPrice</th>
                                        <th>@item.Category.Name</th>
                                        <th>@item.ApplicationType.Name</th>
                                        <th class="text-center">
                                            <div class="w-75 btn-group" role="group">
                                                <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2">

                                                    <i class="fa-regular fa-pen-to-square"></i>
                                                </a>
                                                <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                                     <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </div>
                                        </th>
                                    </tr>
                }
                    </tbody>
                </table>
    }
    else
    {
                <p>No products records yet</p>
    }
</div>

