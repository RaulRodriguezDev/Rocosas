@model Rocosa.Models.ViewModels.SaleViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="get">
  <div class="container p-4 my-3">
    <h2 class="text-info">Sales Managment</h2>
    <div class="border bg-white p-3" style="border-radius: 15px;">
      <div  class="row">
        <div class="col-12">
          <div class="row" style="padding-top: 10px;">
            <div class="col-4">
                @Html.Editor("searchName", new { htmlAttributes = new { @class="form-control", @placeholder="Name..."}})
            </div>
            <div class="col-4">
                @Html.Editor("searchEmail", new { htmlAttributes = new { @class="form-control", @placeholder="Email..."}})
            </div>
            <div class="col-4">
                @Html.Editor("searchPhone", new { htmlAttributes = new { @class="form-control", @placeholder="Phone..."}})
            </div>
          </div>
         </div>
      </div>
      <div class="row pt-1">
         <div class="col-4">
            @Html.DropDownListFor(u=>u.Status, Model.StatusList, "--Status--",new {@class="form-select"})
         </div>
         <div class="offset-4 col-4">
            <button type="submit" class="h-100 btn btn-info form-control">
              <i class="fas fa-search"></i>Search
            </button>
         </div>
      </div>
   </div>
  </div> 
</form>
<div class="bg-white p-3">
    <ejs-grid dataSource="@Model.SalesList" id="GridOverview" allowFiltering="true" allowSorting="true" allowPaging="true">
            <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
                <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>
                <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
                <e-grid-column field="Phone" headerText="Phone Number" textAlign="Right"></e-grid-column>
                <e-grid-column field="SaleStatus" headerText="Sale Status" textAlign="Right"></e-grid-column>
                <e-grid-column field="SaleDate" headerText="Sale Date" customFormat="@(new {type = "date", format="dd/MMM/yyyy"})" textAlign="Right"></e-grid-column>
                <e-grid-column field="ID" headerText="" width="70" 
                    template="<a rel='nofollow'' href='/Sale/Details/${id}' class='btn btn-primary'>
                                <i class='fas fa-list'></i></a>">
                </e-grid-column>
            </e-grid-columns>
        </ejs-grid>
</div>

