@model Rocosa.Models.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input hidden asp-for="Order.Id" />
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Review # @Model.Order.Id
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back</a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Shipment Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input asp-for="Order.FullName" type="text" class="form-control" />
                                    <span asp-validation-for="Order.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <input asp-for="Order.Phone" type="text" class="form-control" />
                                    <span asp-validation-for="Order.Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="Order.Email" type="text" class="form-control" />
                                    <span asp-validation-for="Order.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order's Date'</div>
                                <div class="col-9">
                                    <input value="@Model.Order.OrderDate.ToShortDateString()" type="text" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="row my-1 pt-2">
                                <div class="col-9 offset-3">
                                    <div class="row">
                                        <div class="col">
                                            <input type="submit" value="Transform to Cart" class="btn btn-info form-control" />
                                        </div>

                                        <div class="col">
                                            <input type="submit" value="Delete" class="btn btn-danger form-control" 
                                            formaction="/Order/Delete" formmethod="post"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Datos de la Orden</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var prod in Model.OrderDetail)
                                {
                                     <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-info">@prod.Product.Name</h6>
                                                <small class="text-muted">Price : $@prod.Product.ProductPrice</small><br />
                                            </div>
                                            <div class="col-4">
                                            </div>
                                        </div>
                                     </li>
                                }

                            </ul>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

